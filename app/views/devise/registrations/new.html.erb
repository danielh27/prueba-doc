<div class="container form-session-container">
  <div class="bg-white rounder form-session-card shadow-sm">
    <h2>Registro</h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :name,
                    required: true,
                    autofocus: true,
                    label: "Nombre completo" %>
        <%= f.input :company_name,
                    required: true,
                    autofocus: true,
                    label: "Nombre de la empresa" %>
        <%= f.input :rfc,
                    required: true,
                    autofocus: true,
                    label: "RFC" %>
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    label: "Correo" %>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    label: "Contraseña" %>
        <%= f.input :password_confirmation,
                    label: "Confirmar contraseña",
                    required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Registrarse", class: "text-white btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
