<div class="container form-session-container">
  <div class="bg-white rounder form-session-card shadow-sm">
    <h2>Bienvenido!</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    label: "Correo"%>
        <%= f.input :password,
                    required: false,
                    label: "ContraseÃ±a"%>
        <%= f.input :remember_me, label: "Recuerdame", as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Iniciar sesion", class:"btn text-white btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
